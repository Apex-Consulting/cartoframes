<as-widget-header
  header="{{widget.title}}"
  subheader="{{widget.description}}">
</as-widget-header>

{% if widget.name %}
  <p class="as-title as-m--0 as-p--0 as-font--medium" id="{{id}}">
    <span class="as-loading as-loading--s">
      <svg viewBox="0 0 50 50">
        <circle cx="25" cy="25" r="20" fill="none" />
      </svg>
    </span>
  </p>
{% endif %}

{% if widget.footer %}
  <footer>{{widget.footer}}</footer>
{% endif %}